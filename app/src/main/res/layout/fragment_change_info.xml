<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangeInfoFragment"
    app:cardCornerRadius="14dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">




    <TextView
        android:id="@+id/changeinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No ID received" />

        <EditText
            android:id="@+id/chngdetailtxt"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="22dp"
            android:textColor="@color/black"
            android:text="Change Details"/>


    <RelativeLayout
        android:id="@+id/inputcontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chngdetailtxt"
        android:orientation="vertical">

        <EditText
            android:id="@+id/chngnicknme"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/logininputdesign"
            android:hint="Nick Name"
            android:paddingStart="8dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/chngbd"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_below="@+id/chngnicknme"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/logininputdesign"
            android:hint="birthday"
            android:inputType="date"
            android:paddingStart="8dp"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/chngemail"
            android:layout_width="280dp"
            android:layout_height="56dp"
            android:layout_below="@+id/chngbd"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/logininputdesign"
            android:hint="E-Mail"
            android:paddingStart="8dp"
            android:textSize="18dp" />

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inputcontainer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp">
            <Button
                android:id="@+id/okbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"
                android:text="OK"/>

            <Button
                android:id="@+id/cancelbtn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Cancel"/>
        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>