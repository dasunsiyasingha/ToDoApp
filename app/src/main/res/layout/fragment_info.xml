<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".InfoFragment">


    <TextView
        android:id="@+id/txtprofiletitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="0dp"
        android:text="Developer Info."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/usrpiccrd"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_below="@+id/txtprofiletitle"
        android:layout_marginTop="44dp"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="75dp">

        <ImageView
            android:id="@+id/usrpic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dassaprofile"
            android:background="@color/white"
            android:scaleType="centerCrop"/>


    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/usrpiccrd"
        android:layout_marginTop="-80dp"
        android:background="#C3E7FB">



        <TextView
            android:id="@+id/nanedev"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="98dp"
            android:text="Dasun Siyasinghe"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/nanedev">


            <RelativeLayout
                android:id="@+id/devnamecontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/devnme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Full Name"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/devfullname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hewa Siyasingha Polgahamullage\n Dasun Nilnuwan"
                    android:layout_marginTop="18dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devnme"
                    android:textSize="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/devbdcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/devnamecontainer"
                android:layout_marginTop="18dp"
                android:layout_marginBottom="18dp">

                <TextView
                    android:id="@+id/devbdtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Birthday"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/devbdview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2001.02.24"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="18dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devbdtxt"
                    android:textSize="20dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/devemailcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/devbdcontainer"
                android:layout_marginTop="18dp">

                <TextView
                    android:id="@+id/devmailtxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-Mail"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/devmailview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dasunnilnuwan@gmail.com"
                    android:layout_marginStart="140dp"
                    android:layout_marginTop="18dp"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/black"
                    android:layout_below="@+id/devmailtxt"
                    android:textSize="20dp"/>
            </RelativeLayout>

        </RelativeLayout>


        <!--        <ListView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="800dp"-->
        <!--            android:layout_marginTop="18dp"-->
        <!--            android:layout_below="@+id/progresscard"/>-->


    </RelativeLayout>


</RelativeLayout>