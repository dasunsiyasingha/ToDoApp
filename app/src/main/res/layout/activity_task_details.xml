    <TextView
        android:id="@+id/backbtn"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/baseline_arrow_back_ios_24"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>

    <TextView
        android:id="@+id/txtmaintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Task Details"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"/>



    <RelativeLayout
        android:layout_below="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backfroundapp"/>

                <TextView
                    android:id="@+id/detailtasktitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Title"
                    android:layout_below="@+id/txtmaintitle"
                    android:layout_marginTop="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="#C3E7FB"
                    android:textSize="20dp"/>

    <TextView
        android:id="@+id/txtdesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailtasktitle"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:text="Description"
        android:textSize="16dp"/>

                <TextView
                    android:id="@+id/detailtaskdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Description"
                    android:layout_below="@+id/txtdesc"
                    android:layout_marginStart="48dp"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    android:background="#C3E7FB"
                    android:textSize="18dp"/>


    <TextView
        android:id="@+id/txtlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailtaskdesc"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Location"
        android:textSize="16dp"/>

                <TextView
                    android:id="@+id/detailtasklocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Task Location"
                    android:layout_below="@+id/txtlocation"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="48dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="#C3E7FB"
                    android:textSize="18dp"/>

    <TextView
        android:id="@+id/txtstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailtasklocation"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="16dp"/>

                <Button
                    android:id="@+id/statusbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtstatus"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="48dp"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Pending"/>

    <Button
        android:id="@+id/deletebtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Delete Task"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#F44336"/>


</RelativeLayout>